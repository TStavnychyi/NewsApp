<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <TextView
            android:id="@+id/tv_article_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POLITICS"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/articles_views_margin_start"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="First touch to Flutter: nativate development within a cross-platform framework, is it real?"
            app:layout_constraintTop_toBottomOf="@+id/tv_article_category"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/articles_view_article_title_text_size"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_article_image"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_article_publisher_name"
            android:layout_marginStart="@dimen/articles_views_margin_start"
            android:id="@+id/tv_article_title"/>

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_interests_entertainment"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/articles_views_margin_start"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/iv_article_image"
            app:layout_constraintBottom_toTopOf="@+id/tv_article_publisher_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_article_category"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taras Stavnychyy"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/tv_article_publish_date"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/articles_views_margin_start"
            android:id="@+id/tv_article_publisher_name"/>

    <TextView
            android:id="@+id/tv_article_publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 days ago"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/articles_views_margin_start"/>

    <ImageView
            android:id="@+id/iv_article_options_button"
            android:layout_width="@dimen/articles_view_additional_buttons_size"
            android:layout_height="@dimen/articles_view_additional_buttons_size"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_more_vert"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/iv_article_save_bookmark"
            android:layout_width="@dimen/articles_view_additional_buttons_size"
            android:layout_height="@dimen/articles_view_additional_buttons_size"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bookmark"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_article_options_button"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>