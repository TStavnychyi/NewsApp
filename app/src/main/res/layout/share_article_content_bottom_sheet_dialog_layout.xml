<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_content_dialog_title"
            android:textSize="16sp"
            android:layout_margin="16dp"
            />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >

        <ImageView
                android:id="@+id/iv_article_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sample"
                android:scaleType="centerCrop"
                android:tint="@color/black_color_with_50_percentage_opacity"
                />

        <TextView
                android:id="@+id/iv_article_source_and_published_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bestu.UA * 8 hours ago"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_margin="14sp"
                />

        <TextView
                android:id="@+id/tv_article_title"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="asdasdasdjajsdjasjdasdasdsadasdsadsadsadsadsadasdsadsaddasdasdasdasdsadasdasdasdsadasdsadsadsadsadasdsadsadsadasdsadasdsadasdasdasdsjadjasjdjsa"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_above="@id/iv_article_source_and_published_time"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />

    </RelativeLayout>

</LinearLayout>