<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageButton
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/sample"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_hor1_perc"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/iv_article_image"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_hor1_perc"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"/>

    <TextView
            android:id="@+id/tv_article_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="asdjasjdasjdjasdjasjdasjdajsdasdadasddddddadsadsadsadsdsadasdasdsadsasadsadsadsadsadsadsadsadsadsadsadsasadsadsadsdsadsdsdasdlkasljflasjdljasldjasldslakd"
            android:textSize="13sp"
            android:maxLines="2"
            android:textStyle="bold"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@+id/guideline_hor1_perc"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_article_image"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_article_publish_date"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taras Stavnychyy"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:id="@+id/tv_article_publisher_name"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline_hor1_perc"/>

    <TextView
            android:id="@+id/tv_article_publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="2 days ago"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
